<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.educonnect.AuthActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/auth_toolbar" />
    <Button
        android:id="@+id/auth_signin"
        android:layout_width="173dp"
        android:layout_height="54dp"
        android:text="SIGN IN"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/auth_signup" />

    <Button
        android:id="@+id/auth_signup"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:elevation="@android:dimen/app_icon_size"
        android:text="Sign Up"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="132dp"
        app:layout_constraintHorizontal_bias="0.502" />
</android.support.constraint.ConstraintLayout>
