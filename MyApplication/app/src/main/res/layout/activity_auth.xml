<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.educonnect.AuthActivity"
    android:background="@color/primary_color">

    <include layout="@layout/app_bar_layout" android:id="@+id/auth_toolbar" />

    <Button
        android:id="@+id/auth_signin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="173dp"
        android:layout_height="54dp"
        android:text="SIGN IN"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="238dp" />

    <Button
        android:id="@+id/auth_signup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:elevation="@android:dimen/app_icon_size"
        android:text="Sign Up"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="158dp" />

    <ProgressBar
        android:id="@+id/auth_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="330dp" />
</android.support.constraint.ConstraintLayout>
